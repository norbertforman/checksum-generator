- if controller_name != 'sessions'
  = link_to "Log in", new_session_path(resource_name), class: "btn btn-info-outline btn-sm"
- if devise_mapping.registerable? && controller_name != 'registrations'
  = link_to "Sign up", new_registration_path(resource_name), class: "btn btn-info-outline btn-sm"
- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
  = link_to "Forgot password?", new_password_path(resource_name), class: "btn btn-info-outline btn-sm"
