.container
  %h2.text-xs-center= "Edit #{resource_name.to_s.humanize}"
  .row
    .col-xs-12.col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3.col-lg-6.col-lg-offset-3.col-xl-6.col-xl-offset-3
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
        %fieldset{class: "form-group"}
          %label Email address
          = f.email_field :email, placeholder: "Enter email", autofocus: true, class: "form-control"
        %fieldset{class: "form-group"}
          %label Password
          = f.password_field :password, placeholder: "Enter password", autocomplete: "off", class: "form-control"
          - if @minimum_password_length
            %small{class: "text-muted"}= "#{ @minimum_password_length } characters minimum"
        %fieldset{class: "form-group"}
          %label Password Confirmation
          = f.password_field :password_confirmation, placeholder: "Enter password confirmation", autocomplete: "off", class: "form-control"
        %fieldset{class: "form-group"}
          %label Current Confirmation
          = f.password_field :current_password, placeholder: "Enter current password", autocomplete: "off", class: "form-control"
          %small{class: "text-muted"} we need your current password to confirm your changes
        = f.submit "Update", class: "btn btn-primary btn-block"
