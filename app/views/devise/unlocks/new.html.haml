.container
  %h2.text-xs-center Resend unlock instructions
  .row
    .col-xs-12.col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3.col-lg-6.col-lg-offset-3.col-xl-6.col-xl-offset-3
      = form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f|
        %fieldset{class: "form-group"}
          %label Email address
          = f.email_field :email, placeholder: "Enter email", autofocus: true, class: "form-control"
        = f.submit "Resend unlock instructions", class: "btn btn-primary btn-block"
      %br
      = render "devise/shared/links"
