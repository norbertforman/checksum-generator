.container
  %h2.text-xs-center Change your password
  .row
    .col-xs-12.col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3.col-lg-6.col-lg-offset-3.col-xl-6.col-xl-offset-3
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
        = f.hidden_field :reset_password_token
        %fieldset{class: "form-group"}
          %label Password
          = f.password_field :password, placeholder: "Enter password", autofocus: true, class: "form-control"
          - if @minimum_password_length
            %small{class: "text-muted"}= "#{ @minimum_password_length } characters minimum"
        %fieldset{class: "form-group"}
          %label Password confirmation
          = f.password_field :password_confirmation, placeholder: "Enter password confirmation", autocomplete: "off", class: "form-control"
        = f.submit "Change my password", class: "btn btn-primary btn-block"
      %br
      = render "devise/shared/links"
